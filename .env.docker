# Docker Environment Variables
# Copy to .env before running docker-compose

APP_NAME="HEMIS Univer Backend"
APP_ENV=production
APP_KEY=base64:GENERATED_KEY_HERE
APP_DEBUG=false
APP_URL=http://localhost:8000

LOG_CHANNEL=stderr
LOG_LEVEL=info

# Database (Docker service name)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=univer
DB_USERNAME=postgres
DB_PASSWORD=YourSecurePasswordHere

# Cache & Session (Redis)
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# JWT
JWT_SECRET=GENERATED_JWT_SECRET_HERE
JWT_TTL=60
JWT_REFRESH_TTL=20160

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
